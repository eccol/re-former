<h1>New User</h1>

<% if @user.errors.any? %>
  <div id="error_explanos">
    <h2><%= @user.errors.count %> errors happened.</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user do |form| %>
  <%= form.label :username, "Picka name!" %>
  <%= form.text_field :username %>
  <%= form.label :email, "Email:" %>
  <%= form.email_field :email, placeholder: "robot@example.net" %>
  <%= form.label :password, "Password:" %>
  <%= form.password_field :password %>
  <%= form.submit "Register" %>
<% end %>

